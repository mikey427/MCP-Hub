{
  "name": "mcp-hub",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:clean": "tsc -b --clean && rimraf packages/*/dist && tsc -b",
    "clean": "rimraf packages/*/dist",
    "dev": "npm-run-all -p dev:server dev:cli",
    "dev:server": "npm --workspace @mcp-hub/server run dev",
    "dev:cli": "npm --workspace @mcp-hub/cli run dev",
    "start": "npm --workspace @mcp-hub/server run start"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.11",
    "@types/ws": "^8.5.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.19.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikey427/MCP-Hub.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mikey427/MCP-Hub/issues"
  },
  "homepage": "https://github.com/mikey427/MCP-Hub#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dotenv": "^17.2.1"
  }
}
